<!-- include header -->
<%- include('include/_header.ejs')%>
    <!-- /include header -->

    <!-- Main site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Product</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Product</h2>
                <span class="text-light">Use the below form to update product</span>
            </div>

            <!-- form -->
            <form method="post" id="update_product">
                <div class="new_product">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= product._id %>">
                        <input type="text" name="name" value="<%= product.name %>" placeholder="Hair's name">
                    </div>
                    <div class="form-group">
                        <label for="category" class="text-light">Category</label>
                        <input type="text" name="category" value="<%= product.category %>"
                            placeholder="Type of Product">
                    </div>
                    <div class="form-group">
                        <label for="discription" class="text-light">Discription</label>
                        <input type="text" class="discription" name="discription" value="<%= product.discription %>"
                            placeholder="About Product">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">SAVE</button>
                    </div>
                </div>

            </form>
        </div>
    </main>
    <!-- /Main site -->



    <!-- include footer -->
    <%- include('include/_footer.ejs') %>
        <!-- /include footer -->